          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Dashboard",
      "short_name": "Dashboard",
      "description": "Access your business dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/dashboard-icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Voice Search",
      "short_name": "Voice",
      "description": "Search products using voice input",
      "url": "/voice-search",
      "icons": [
        {
          "src": "/icons/voice-icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "GST Calculator",
      "short_name": "GST Calc",
      "description": "Calculate GST for your transactions",
      "url": "/gst-calculator",
      "icons": [
        {
          "src": "/icons/gst-icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://bell24h-v1.vercel.app"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".webp"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+bell24h",
      "url": "/?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "permissions": [
    "geolocation",
    "notifications",
    "camera",
    "microphone"
  ],
  "features": [
    "cross-origin-isolated",
    "payment",
    "web-share"
  ]
}
